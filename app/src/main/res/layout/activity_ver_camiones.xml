<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".VerCamionesFragment">

    <TextView
        android:id="@+id/TituloVerCamiones"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabla de Ingresos"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TituloVerCamiones"
        android:id="@+id/rvCamiones"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/noHayIngresos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No hay camiones registrados"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>